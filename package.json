{
  "author": "Thierry Wong",
  "license": "AGPL-3.0-only",
  "name": "@gnowth/root",
  "private": true,
  "repository": "https://github.com/gnowth/entity.git",
  "version": "",
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": "10.15.3",
    "npm": "6.4.1"
  },
  "jestWebpackResolver": {
    "silent": true,
    "webpackConfig": "./configs/webpack.config.js"
  },
  "scripts": {
    "build": "yarn workspace @serve/client-react build",
    "build:analyze": "yarn workspace @serve/client-react build:analyze",
    "build:stats": "yarn workspace @serve/client-react build:stats",
    "check": "npm run check:types",
    "check:types": "tsc",
    "clean": "lerna clean",
    "coveralls": "jest --config configs/jest.config.js --coverage --collectCoverageFrom=packages/**/*.{js,jsx} --collectCoverageFrom=!packages/**/*stories.{js,jsx} --maxWorkers=2 && cat ./coverage/lcov.info | coveralls",
    "deploy": "./scripts/deploy-ghpages.sh",
    "extract-messages": "extract-messages -l=en -o packages/dev-client/src/translation '**/**locales.js'",
    "fetch": "git fetch --prune",
    "git-view": "git log --all --graph --decorate --pretty=oneline --abbrev-commit",
    "lerna": "lerna",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:css": "stylelint '**/*.{js,jsx,ts,tsx}'",
    "lint:js": "eslint --ext .js,.jsx,.ts,.tsx .",
    "packages-build": "cross-env NODE_ENV=production lerna run --scope '@@(gnowth|entity)/*' build",
    "packages-destroy": "lerna run --scope '@@(gnowth|entity)/*' destroy",
    "packages-link-index:dist": "lerna run --scope '@@(gnowth|entity)/*' link-index:dist",
    "packages-link-index:src": "lerna run --scope '@@(gnowth|entity)/*' link-index:src",
    "packages-publish": "./scripts/publish.sh",
    "prebuild:analyze": "npm run build:stats",
    "serve-dist": "yarn workspace @serve/client-react serve-dist",
    "start": "yarn workspace @serve/client-react start",
    "storybook": "yarn workspace @serve/client-react storybook",
    "storybook:build": "yarn workspace @serve/client-react storybook:build",
    "test": "jest --config configs/jest.config.js",
    "yarn": "yarn"
  },
  "devDependencies": {
    "@babel/core": "7.3.4",
    "@babel/plugin-proposal-class-properties": "7.3.4",
    "@babel/plugin-proposal-export-default-from": "7.2.0",
    "@babel/plugin-proposal-export-namespace-from": "7.2.0",
    "@babel/plugin-proposal-optional-chaining": "7.2.0",
    "@babel/plugin-syntax-dynamic-import": "7.2.0",
    "@babel/plugin-transform-react-jsx": "7.3.0",
    "@babel/polyfill": "7.2.5",
    "@babel/preset-env": "7.3.4",
    "@babel/preset-react": "7.0.0",
    "@babel/preset-typescript": "7.3.3",
    "@intervolga/optimize-cssnano-plugin": "1.0.6",
    "@types/jest": "24.0.11",
    "@typescript-eslint/eslint-plugin": "1.4.2",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "10.0.1",
    "babel-jest": "24.5.0",
    "babel-loader": "8.0.5",
    "babel-plugin-idx": "2.4.0",
    "babel-plugin-lodash": "3.3.4",
    "babel-plugin-react-flow-props-to-prop-types": "0.15.0",
    "babel-plugin-react-intl-auto": "1.7.0",
    "babel-plugin-styled-components": "1.10.0",
    "babel-plugin-transform-react-remove-prop-types": "0.4.24",
    "browser-sync": "2.26.3",
    "browser-sync-webpack-plugin": "2.2.2",
    "coveralls": "3.0.3",
    "cross-env": "5.2.0",
    "css-loader": "2.1.1",
    "directory-named-webpack-plugin": "4.0.1",
    "eslint": "5.15.3",
    "eslint-config-airbnb": "17.1.0",
    "eslint-config-airbnb-typescript": "1.1.0",
    "eslint-import-resolver-webpack": "0.11.0",
    "eslint-plugin-eslint-comments": "3.1.1",
    "eslint-plugin-import": "2.16.0",
    "eslint-plugin-jest": "22.4.1",
    "eslint-plugin-jsx-a11y": "6.2.1",
    "eslint-plugin-promise": "4.0.1",
    "eslint-plugin-react": "7.12.4",
    "eslint-plugin-react-hooks": "1.5.1",
    "eslint-plugin-unicorn": "7.1.0",
    "extract-react-intl-messages": "1.0.1",
    "extract-text-webpack-plugin": "4.0.0-beta.0",
    "file-loader": "3.0.1",
    "html-webpack-plugin": "3.2.0",
    "jest": "24.5.0",
    "jest-prop-type-error": "1.1.0",
    "jest-styled-components": "6.3.1",
    "jest-webpack-resolver": "0.3.0",
    "json": "9.0.6",
    "lerna": "3.13.1",
    "lodash": "4.17.11",
    "raw-loader": "1.0.0",
    "react-test-renderer": "16.8.4",
    "rimraf": "2.6.3",
    "rollup": "1.6.0",
    "rollup-plugin-babel": "4.3.2",
    "rollup-plugin-commonjs": "9.2.1",
    "rollup-plugin-copy": "0.2.3",
    "rollup-plugin-json": "3.1.0",
    "rollup-plugin-named-directory": "1.0.0",
    "rollup-plugin-node-resolve": "4.0.1",
    "rollup-plugin-replace": "2.1.1",
    "rollup-plugin-terser": "4.0.4",
    "style-loader": "0.23.1",
    "stylelint": "9.10.1",
    "stylelint-config-recommended": "2.1.0",
    "stylelint-config-styled-components": "0.1.1",
    "stylelint-processor-styled-components": "1.5.2",
    "typescript": "3.3.3333",
    "webpack": "4.29.6",
    "webpack-bundle-analyzer": "3.1.0",
    "webpack-cli": "3.3.0",
    "webpack-dev-server": "3.2.1",
    "webpack-s3-plugin": "1.0.3",
    "webpack-visualizer-plugin": "0.1.11",
    "workbox-webpack-plugin": "4.1.1",
    "yarn": "1.13.0"
  }
}
