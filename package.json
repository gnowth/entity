{
  "author": "Thierry Wong",
  "license": "AGPL-3.0-only",
  "name": "@gnowth/root",
  "private": true,
  "repository": "https://github.com/gnowth/react.git",
  "version": "0.2.0",
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": "10.15.0",
    "npm": "6.4.1"
  },
  "jestWebpackResolver": {
    "silent": true,
    "webpackConfig": "./configs/webpack.config.js"
  },
  "scripts": {
    "analyze": "yarn workspace @serve/client-react analyze",
    "build": "yarn workspace @serve/client-react build",
    "clean": "lerna clean",
    "coveralls": "jest --config configs/jest.config.js --coverage --collectCoverageFrom=packages/**/*.{js,jsx} --collectCoverageFrom=!packages/**/*stories.{js,jsx} --maxWorkers=2 && cat ./coverage/lcov.info | coveralls",
    "deploy": "./scripts/deploy-ghpages.sh",
    "fetch": "git fetch --prune",
    "git-view": "git log --all --graph --decorate --pretty=oneline --abbrev-commit",
    "lerna": "lerna",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint --ext .js,.jsx .",
    "lint:css": "stylelint '**/*.{js,jsx}' --config configs/stylelint.config.js",
    "packages-build": "lerna run --scope '@@(gnowth|entity)/*' build",
    "packages-destroy": "lerna run --scope '@@(gnowth|entity)/*' destroy",
    "packages-link-main:dist": "lerna run --scope '@@(gnowth|entity)/*' link-main:dist",
    "packages-link-main:src": "lerna run --scope '@@(gnowth|entity)/*' link-main:src",
    "packages-publish": "./scripts/publish.sh",
    "serve-dist": "yarn workspace @serve/client-react serve-dist",
    "start": "yarn workspace @serve/client-react start",
    "storybook": "yarn workspace @serve/client-react storybook",
    "storybook:build": "yarn workspace @serve/client-react storybook:build",
    "test": "jest --config configs/jest.config.js",
    "yarn": "yarn"
  },
  "devDependencies": {
    "@babel/core": "7.2.2",
    "@babel/plugin-proposal-class-properties": "7.2.3",
    "@babel/plugin-proposal-export-default-from": "7.2.0",
    "@babel/plugin-proposal-export-namespace-from": "7.2.0",
    "@babel/plugin-proposal-optional-chaining": "7.2.0",
    "@babel/plugin-syntax-dynamic-import": "7.2.0",
    "@babel/plugin-transform-react-jsx": "7.2.0",
    "@babel/polyfill": "7.2.5",
    "@babel/preset-env": "7.2.3",
    "@babel/preset-react": "7.0.0",
    "@intervolga/optimize-cssnano-plugin": "1.0.6",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "10.0.1",
    "babel-jest": "23.6.0",
    "babel-loader": "8.0.5",
    "babel-plugin-react-flow-props-to-prop-types": "0.15.0",
    "babel-plugin-styled-components": "1.10.0",
    "babel-plugin-transform-react-remove-prop-types": "0.4.23",
    "browser-sync": "2.26.3",
    "browser-sync-webpack-plugin": "2.2.2",
    "coveralls": "3.0.2",
    "css-loader": "2.1.0",
    "directory-named-webpack-plugin": "4.0.0",
    "eslint": "5.12.1",
    "eslint-config-airbnb": "17.1.0",
    "eslint-import-resolver-webpack": "0.10.1",
    "eslint-plugin-import": "2.14.0",
    "eslint-plugin-jsx-a11y": "6.1.2",
    "eslint-plugin-react": "7.12.4",
    "extract-text-webpack-plugin": "4.0.0-beta.0",
    "file-loader": "3.0.1",
    "html-webpack-plugin": "3.2.0",
    "jest": "23.6.0",
    "jest-prop-type-error": "1.1.0",
    "jest-styled-components": "6.3.1",
    "jest-webpack-resolver": "0.3.0",
    "json": "9.0.6",
    "lerna": "3.10.6",
    "lodash": "4.17.11",
    "raw-loader": "1.0.0",
    "react-test-renderer": "16.7.0",
    "rimraf": "2.6.3",
    "rollup": "1.1.1",
    "rollup-plugin-babel": "4.3.2",
    "rollup-plugin-commonjs": "9.2.0",
    "rollup-plugin-copy": "0.2.3",
    "rollup-plugin-named-directory": "1.0.0",
    "rollup-plugin-node-resolve": "4.0.0",
    "rollup-plugin-replace": "2.1.0",
    "rollup-plugin-terser": "4.0.2",
    "style-loader": "0.23.1",
    "stylelint": "9.10.1",
    "stylelint-config-recommended": "2.1.0",
    "stylelint-config-styled-components": "0.1.1",
    "stylelint-processor-styled-components": "1.5.2",
    "webpack": "4.28.4",
    "webpack-bundle-analyzer": "3.0.3",
    "webpack-cli": "3.2.1",
    "webpack-dev-server": "3.1.14",
    "webpack-s3-plugin": "1.0.3",
    "workbox-webpack-plugin": "3.6.3",
    "yarn": "1.13.0"
  }
}
